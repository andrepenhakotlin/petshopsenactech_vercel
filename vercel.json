{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/cachorros",
      "dest": "/pages/cachorros.html"
    },
    {
      "src": "/gatos",
      "dest": "/pages/gatos.html"
    },
    {
      "src": "/passaros",
      "dest": "/pages/passaros.html"
    },
    {
      "src": "/peixes",
      "dest": "/pages/peixes.html"
    },
    {
      "src": "/jardim",
      "dest": "/pages/jardim.html"
    },
    {
      "src": "/promocoes",
      "dest": "/pages/promocoes.html"
    },
    {
      "src": "/areainterna",
      "dest": "/pages/areainterna.html"
    },
    {
      "src": "/contato",
      "dest": "/pages/contato.html"
    },
    {
      "src": "/sobre",
      "dest": "/pages/sobre.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "server/server.js": {
      "includeFiles": "server/**"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
